<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CoolName" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red_orange</item>
        <item name="colorPrimaryVariant">@color/red_orange</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red_orange_faded</item>
        <item name="colorSecondaryVariant">@color/red_orange_faded</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="buttonStyle">@style/rounded_corner_button</item>
    </style>

    <style name="rounded_corner_button" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">128dp</item>
        <item name="elevation">@dimen/mtrl_btn_elevation</item>
        <item name="rippleColor">@color/red_orange_darkened</item>
    </style>
</resources>