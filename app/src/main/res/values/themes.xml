<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Optifit" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_blue_400</item>
        <item name="colorPrimaryVariant">@color/light_blue_400</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:buttonStyle">@style/ExerciseButton</item>
        <item name="buttonStyle">@style/ExerciseButton</item>
        <item name="cardViewStyle">@style/SensorCard</item>
    </style>

    <style name="ExerciseButton" parent="android:Widget.Material.Button">
        <item name="android:height">110dp</item>
        <item name="android:backgroundTint">@color/design_default_color_primary</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="DeleteRepetitionButton" parent="android:Widget.Material.Button">
        <item name="android:height">20dp</item>
        <item name="android:width">20dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="SensorCard" parent="CardView">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">2dp</item>
        <item name="contentPadding">15dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="ExerciseId" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAlignment">center</item>
        <item name="flow_verticalAlign">center</item>
        <item name="android:textSize">36sp</item>
    </style>

    <item type="color" name="connectedSensorColor">@color/green</item>
    <item type="color" name="disconnectedSensorColor">@color/orange</item>
</resources>